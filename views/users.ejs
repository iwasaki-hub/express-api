<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <!-- header -->
    <header class="header">
      <div class="header-inner">
        <a href="/" class="logo-wrapper">
          <img src="/images/logo.png" alt="Express Logo" class="logo" />
          <span class="app-title">Express App</span>
        </a>
      </div>
    </header>

    <!-- main -->
    <main class="container">
      <p class="message"><%= message %></p>
      <a href="/" class="button">Home</a>
      <ul>
        <% users.forEach(user => { %>
        <li><%= user %></li>
        <% }) %>
      </ul>
    </main>

    <!-- footer -->
    <footer class="footer">Â© 2026 Express App</footer>
  </body>
</html>
